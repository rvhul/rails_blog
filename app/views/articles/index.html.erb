<div class="container">
  <h1><strong>Blog Posts</strong></h1>

  <table>
    <tr>
      <th>Post</th>
      <th>Content</th>
    </tr>

    <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show Me', article_path(article) %></td>
      <td><%= link_to 'Edit Me', edit_article_path(article) %></td>
      <td><%= link_to 'Delete Me', article_path(article), method: :delete, data: {confirm: 'Is that your final answer?'} %></td>
    </tr>
    <% end %>
  </table><br>

  <%= link_to 'New Post', new_article_path %><br>
  <%= link_to 'Home', controller: 'welcome' %>
</div>
